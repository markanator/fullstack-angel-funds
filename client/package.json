{
    "name": "react-tailwind-starter",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.5",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "formik": "^2.2.1",
        "framer-motion": "^2.9.4",
        "prop-types": "^15.7.2",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-icons": "^3.11.0",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^4.0.0",
        "tailwindcss": "^1.9.6",
        "yup": "^0.29.3"
    },
    "scripts": {
        "purge:css": "cross-env NODE_ENV=production postcss src/styles/tailwind.css -o src/index.css",
        "build:css": "postcss src/styles/tailwind.css -o src/styles/index.css",
        "watch:css": "postcss src/styles/tailwind.css -o src/styles/index.css -w",
        "start": "npm run build:css && react-scripts start",
        "build": "npm run purge:css && react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "autoprefixer": "^9.8.0",
        "babel-eslint": "^10.1.0",
        "cross-env": "^7.0.2",
        "cssnano": "^4.1.10",
        "eslint": "^7.8.1",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-wesbos": "^1.0.1",
        "eslint-plugin-html": "^6.1.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.1.2",
        "postcss-cli": "^7.1.1",
        "prettier": "^2.1.1"
    }
}
